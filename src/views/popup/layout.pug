doctype html
html
  head
    meta(charset='utf-8')
    title #{title}
    link(rel='shortcut icon', href='/favicon_' + color + '.png')
    link(rel='stylesheet', href='css/main.css')
    script(type='text/javascript' src='js/jquery-3.1.1.min.js')

  body(class= color)
    div.logo
      img.logo(src="images/logo.png")
    div.status
      h1 !{status}
      p !{statusMore}
    div.buttons
      a.red#backButton !{backButton}
      a.yellow#goButton !{goButton}
      a.green#saveButton !{saveButton}
    script(type='text/javascript' src='js/main.js')