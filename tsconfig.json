{
  "compilerOptions": {
    "target": "ES5",
    // "module": "system", Let Webpack handle modules
    "allowSyntheticDefaultImports": true,
    "lib": [
        "dom",
        "es2015",
        "es2016"
    ],
    // might need to fuss with this
    "moduleResolution": "node",
    // Helpful for Debugging
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ]
}